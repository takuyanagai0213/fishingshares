<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
            <% if current_user.admin? && !current_user?(user) %> 
              <%= link_to "ユーザ削除", user, method: :delete, data: { confirm: "削除してよろしいでしょうか?" } %>
            <% end %>
          </div>
          <div>
            <p><%= link_to 'ユーザ詳細ページ', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>