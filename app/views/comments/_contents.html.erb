<% if @comments.empty? %>
  <h3>コメント一覧</h3>
  <p>まだコメントはありません。</p>
<% else %>
  <h3>コメント一覧</h3>
  <% @comments.each do |comment| %>
      <%= link_to comment.user.name, user_path(comment.user), class: 'text-muted small' %>
    <div class="card">
      <%= comment.content %>
      <span class="text-muted small text-right">投稿日 <%= @post.created_at %></span>
    </div>
  <% end %>
<% end %>

<% if logged_in? %>
  <%= render 'comments/form' %>
<% else %>
  <%= link_to 'ログインをしてコメントをしよう！', login_path, class: 'btn btn-primary' %>
<% end %>