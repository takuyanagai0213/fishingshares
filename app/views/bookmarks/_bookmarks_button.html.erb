<% if current_user.bookmark_add?(post) %>
  <%= form_with(model: current_user.bookmarks.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= button_tag '<i class="fas fa-star"></i>'.html_safe, :type => "submit", :class =>"btn btn-default btn-s-md" %>
  <% end %>
<% else %>
  <p>ここでブックマークができるよ！</p><i class="far fa-hand-point-down"></i>
  <%= form_with(model: current_user.bookmarks.build(post_id: post.id), local: true) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= button_tag '<i class="far fa-star"></i>'.html_safe, :type => "submit", :class =>"btn btn-default btn-s-md" %>
  <% end %>
<% end %>
