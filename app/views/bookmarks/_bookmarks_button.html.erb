<% if current_user.bookmark_add?(post) %>
  <%= form_with(model: current_user.bookmarks.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit 'ブックマークを解除', class: 'btn btn-warning' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.bookmarks.build(post_id: post.id), local: true) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit 'ブックマークに登録', class: 'btn btn-primary' %>
  <% end %>
<% end %>
  